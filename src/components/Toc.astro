---
const headings = Astro.props.headings ?? [];
const filtered = headings.filter((h) => h.depth === 2 || h.depth === 3);

function indent(depth) {
  return depth === 3 ? "14px" : "0px";
}
---

<!-- Desktop TOC -->
<nav class="toc toc-desktop" aria-label="Table of contents">
  <div class="toc-inner">
    <div class="toc-title">CONTENTS</div>

    {filtered.map((h) => (
      <a
        class="toc-link"
        href={`#${h.slug}`}
        style={`margin-left:${indent(h.depth)};`}
        data-toc-link
      >
        {h.text}
      </a>
    ))}
  </div>
</nav>

<!-- Mobile TOC (collapsible) -->
<details class="toc toc-mobile" aria-label="Table of contents">
  <summary class="toc-summary">
    <span class="toc-title">CONTENTS</span>
    <span class="toc-chevron" aria-hidden="true">▾</span>
  </summary>

  <div class="toc-mobile-body">
    {filtered.map((h) => (
      <a
        class="toc-link"
        href={`#${h.slug}`}
        style={`margin-left:${indent(h.depth)};`}
        data-toc-link
      >
        {h.text}
      </a>
    ))}
  </div>
</details>

<style>
  /* ------- Responsive TOC behavior ------- */
  .toc-desktop {
    display: block;

    /* Sticky sidebar that vertically centers its contents (desktop only). */
    position: sticky;
    top: 0;
    height: 100vh;
    padding: 16px 0;

    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .toc-inner {
    max-height: calc(100vh - 32px);
    overflow: auto;
  }

  .toc-mobile {
    display: none;
  }

  @media (max-width: 980px) {
    .toc-desktop {
      display: none;
    }
    .toc-mobile {
      display: block;
    }

    .toc-summary {
      list-style: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      padding: 10px 12px;
      border-radius: 14px;
      user-select: none;
    }

    .toc-mobile summary::-webkit-details-marker {
      display: none;
    }

    .toc-chevron {
      opacity: 0.7;
      font-size: 14px;
      transform: rotate(0deg);
      transition: transform 120ms ease;
    }
    details[open] .toc-chevron {
      transform: rotate(180deg);
    }

    .toc-mobile-body {
      padding: 10px 4px 2px;
      max-height: 42vh;
      overflow: auto;
    }
  }

  /* ---------- Modern TOC look ---------- */

  /* Title */
  .toc-title {
    font-size: 11px;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: rgba(15, 23, 42, 0.55);
    font-weight: 800;
    margin: 0 0 12px;
  }

  /* Desktop container: “card” */
  .toc-desktop .toc-inner {
    width: min(280px, 100%);
    border: 1px solid var(--border);
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 10px 30px rgba(2, 6, 23, 0.06);
    padding: 14px 12px;
    backdrop-filter: blur(8px);
  }

  /* Links */
  .toc-link {
    display: block;
    padding: 9px 10px 9px 12px;
    border-radius: 12px;
    text-decoration: none;
    font-size: 13px;
    line-height: 1.25;
    color: rgba(15, 23, 42, 0.72);
    transition: background 140ms ease, color 140ms ease, transform 140ms ease;
    margin: 2px 0;
  }

  /* Hover */
  .toc-link:hover {
    background: rgba(15, 23, 42, 0.04);
    color: rgba(15, 23, 42, 0.92);
    transform: translateY(-1px);
  }

  /* Active = pill + subtle border */
  .toc-link.is-active {
    background: rgba(234, 179, 8, 0.14);
    color: rgba(15, 23, 42, 0.95);
    font-weight: 750;
    outline: 1px solid rgba(234, 179, 8, 0.35);
    box-shadow: 0 6px 16px rgba(234, 179, 8, 0.18);
  }

  /* Better hierarchy for depth=3 items */
  .toc-link[style*="margin-left:14px"] {
    font-size: 12.5px;
    color: rgba(15, 23, 42, 0.62);
  }

  /* Scroll polish */
  .toc-inner {
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: rgba(15, 23, 42, 0.18) transparent;
  }
  .toc-inner::-webkit-scrollbar {
    width: 10px;
  }
  .toc-inner::-webkit-scrollbar-thumb {
    background: rgba(15, 23, 42, 0.14);
    border-radius: 999px;
    border: 3px solid transparent;
    background-clip: content-box;
  }
  .toc-inner::-webkit-scrollbar-thumb:hover {
    background: rgba(15, 23, 42, 0.22);
    border: 3px solid transparent;
    background-clip: content-box;
  }

  /* Mobile: match the card aesthetic */
  @media (max-width: 980px) {
    .toc-mobile {
      border: 1px solid var(--border);
      background: rgba(255, 255, 255, 0.92);
      border-radius: 16px;
      padding: 10px;
      box-shadow: 0 10px 30px rgba(2, 6, 23, 0.06);
      backdrop-filter: blur(8px);
      margin: 0 0 16px;
    }

    .toc-summary {
      background: rgba(15, 23, 42, 0.04);
    }
  }

  /* ---------------- Dark-mode adaptation ---------------- */
  /* Assumes your theme toggle sets: document.documentElement.dataset.theme = "dark" */

  :root {
    --toc-bg: rgba(255, 255, 255, 0.92);
    --toc-border: var(--border);
    --toc-shadow: 0 10px 30px rgba(2, 6, 23, 0.06);

    --toc-title: rgba(15, 23, 42, 0.55);

    --toc-link: rgba(15, 23, 42, 0.72);
    --toc-link-hover-bg: rgba(15, 23, 42, 0.04);
    --toc-link-hover: rgba(15, 23, 42, 0.92);

    --toc-active-bg: rgba(234, 179, 8, 0.14);
    --toc-active-outline: rgba(234, 179, 8, 0.35);
    --toc-active-shadow: 0 6px 16px rgba(234, 179, 8, 0.18);

    --toc-scroll-thumb: rgba(15, 23, 42, 0.14);
    --toc-scroll-thumb-hover: rgba(15, 23, 42, 0.22);

    --toc-summary-bg: rgba(15, 23, 42, 0.04);
  }

  :root[data-theme="dark"] {
    --toc-bg: rgba(2, 6, 23, 0.55);                 /* dark glass */
    --toc-border: rgba(148, 163, 184, 0.18);
    --toc-shadow: 0 12px 36px rgba(0, 0, 0, 0.45);

    --toc-title: rgba(226, 232, 240, 0.55);

    --toc-link: rgba(226, 232, 240, 0.72);
    --toc-link-hover-bg: rgba(226, 232, 240, 0.06);
    --toc-link-hover: rgba(226, 232, 240, 0.92);

    --toc-active-bg: rgba(234, 179, 8, 0.16);
    --toc-active-outline: rgba(234, 179, 8, 0.45);
    --toc-active-shadow: 0 10px 26px rgba(234, 179, 8, 0.12);

    --toc-scroll-thumb: rgba(226, 232, 240, 0.18);
    --toc-scroll-thumb-hover: rgba(226, 232, 240, 0.28);

    --toc-summary-bg: rgba(226, 232, 240, 0.06);
  }

  /* Apply variables to the modern TOC styles */
  .toc-title { color: var(--toc-title); }

  .toc-desktop .toc-inner,
  .toc-mobile {
    background: var(--toc-bg);
    border: 1px solid var(--toc-border);
    box-shadow: var(--toc-shadow);
  }

  /* If you use blur, keep it; otherwise delete these lines */
  .toc-desktop .toc-inner,
  .toc-mobile { backdrop-filter: blur(10px); }

  .toc-link { color: var(--toc-link); }

  .toc-link:hover {
    background: var(--toc-link-hover-bg);
    color: var(--toc-link-hover);
  }

  .toc-link.is-active {
    background: var(--toc-active-bg);
    outline: 1px solid var(--toc-active-outline);
    box-shadow: var(--toc-active-shadow);
  }

  /* Scrollbar colors (desktop + mobile bodies) */
  .toc-inner { scrollbar-color: var(--toc-scroll-thumb) transparent; }

  .toc-inner::-webkit-scrollbar-thumb { background: var(--toc-scroll-thumb); }
  .toc-inner::-webkit-scrollbar-thumb:hover { background: var(--toc-scroll-thumb-hover); }

  /* Mobile summary background */
  .toc-summary { background: var(--toc-summary-bg); }

</style>

<script is:inline>
  (() => {
    // We have 2 TOCs on the page (desktop + mobile). Collect all links.
    const links = Array.from(document.querySelectorAll("a[data-toc-link]"));
    if (!links.length) return;

    const targets = links
      .map((a) => {
        const href = a.getAttribute("href");
        if (!href || !href.startsWith("#")) return null;
        const id = decodeURIComponent(href.slice(1));
        return document.getElementById(id);
      })
      .filter(Boolean);

    const clear = () => links.forEach((a) => a.classList.remove("is-active"));

    const setActiveById = (id) => {
      if (!id) return;
      clear();
      for (const a of links) {
        const hid = decodeURIComponent(a.getAttribute("href").slice(1));
        if (hid === id) a.classList.add("is-active");
      }
    };

    // Close mobile accordion after clicking a link
    links.forEach((a) => {
      a.addEventListener("click", () => {
        const details = a.closest("details.toc-mobile");
        if (details) details.removeAttribute("open");

        const href = a.getAttribute("href");
        if (href && href.startsWith("#"))
          setActiveById(decodeURIComponent(href.slice(1)));
      });
    });

    if (location.hash) setActiveById(decodeURIComponent(location.hash.slice(1)));

    window.addEventListener("hashchange", () => {
      if (location.hash) setActiveById(decodeURIComponent(location.hash.slice(1)));
    });

    const io = new IntersectionObserver(
      (entries) => {
        const visible = entries
          .filter((e) => e.isIntersecting)
          .sort((a, b) => a.boundingClientRect.top - b.boundingClientRect.top);

        if (visible.length) setActiveById(visible[0].target.id);
      },
      { root: null, rootMargin: "-18% 0px -72% 0px", threshold: 0.01 }
    );

    // De-dup targets (because links repeat in desktop+mobile)
    const uniq = Array.from(new Set(targets));
    uniq.forEach((t) => io.observe(t));
  })();
</script>
